{{!< default}}

<section class="outer">
  <div class="inner posts" style="padding: 6vmin 0;">
    <header>
      <h1>Explore Tags</h1>
    </header>

    {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
      {{#foreach tags}}
        <a href="{{url}}" style="display: inline-block; margin: .5em .9em .5em 0;">
          <h3 style="margin: 0;">{{name}} <small>({{count.posts}})</small></h3>
        </a>
      {{/foreach}}
    {{/get}}
  </div>
</section>
